@model CalcMean.Models.DsNopTruoc

@{
    ViewBag.Title = (Model.Id > 0 ? "Sửa" : "Thêm") + " người đóng tiền";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            <label class="control-label col-md-2">Người nộp</label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.NguoiNopId, ViewBag.NguoiNopId as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NguoiNopId)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Số tiền</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.SoTien, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SoTien)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Đợt chốt</label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.ChotSoId, ViewBag.ChotSoId as SelectList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ChotSoId)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Nội dung</label>
            <div class="col-md-10">
                <textarea name="Title" class="form-control" id="Title" rows="5">@Common.Decode(Model.Title)</textarea>
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" onclick="return beforAddMoney();" />
                <a href="@Url.Action("Index")" class="btn btn-default">Quay lại</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
