@{
    ViewBag.Title = "Trang chủ";
    ViewBag.Class = "fa fa-home";
    ViewBag.Breadcrumbs = ViewBag.Title;
}
<div class="row">
    <div class="col-md-12">
        <h3>Sản phẩm may</h3>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-success panel-stat">
            <div class="panel-heading">
                <div class="stat">
                    <div class="row">
                        <div class="col-xs-4">
                            <img src="/Images/is-user.png" alt="">
                        </div>
                        <div class="col-xs-8">
                            <small class="stat-label">Chưa may</small>
                            <h1>9</h1>
                        </div>
                    </div><!-- row -->
                </div><!-- stat -->
            </div><!-- panel-heading -->
        </div><!-- panel -->
    </div><!-- col-sm-6 -->

    <div class="col-sm-6">
        <div class="panel panel-danger panel-stat">
            <div class="panel-heading">

                <div class="stat">
                    <div class="row">
                        <div class="col-xs-4">
                            <img src="/Images/is-document.png" alt="">
                        </div>
                        <div class="col-xs-8">
                            <small class="stat-label">Đã may chưa trả</small>
                            <h1>200</h1>
                        </div>
                    </div><!-- row -->
                </div><!-- stat -->

            </div><!-- panel-heading -->
        </div><!-- panel -->
    </div><!-- col-sm-6 -->
    <div class="col-md-12">
        <h3>Sản phẩm sửa chữa</h3>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-primary panel-stat">
            <div class="panel-heading">

                <div class="stat">
                    <div class="row">
                        <div class="col-xs-4">
                            <img src="/Images/is-money.png" alt="">
                        </div>
                        <div class="col-xs-8">
                            <small class="stat-label">Chưa sửa</small>
                            <h1>10</h1>
                        </div>
                    </div><!-- row -->
                </div><!-- stat -->

            </div><!-- panel-heading -->
        </div><!-- panel -->
    </div><!-- col-sm-6 -->

    <div class="col-sm-6">
        <div class="panel panel-dark panel-stat">
            <div class="panel-heading">

                <div class="stat">
                    <div class="row">
                        <div class="col-xs-4">
                            <img src="/Images/is-money.png" alt="">
                        </div>
                        <div class="col-xs-8">
                            <small class="stat-label">Đã sửa chưa trả</small>
                            <h1>100</h1>
                        </div>
                    </div><!-- row -->
                </div><!-- stat -->

            </div><!-- panel-heading -->
        </div><!-- panel -->
    </div><!-- col-sm-6 -->
</div>