@using iClassic.Helper;
@using iClassic.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<PhieuSanXuat>

@{
    ViewBag.Title = "Phiếu sản xuất";
    ViewBag.Class = "fa fa-dollar";
    ViewBag.Breadcrumbs = ViewBag.Title;
    var searchModel = ViewBag.SearchModel as PhieuSanXuatSearch;
}

<div class="row mb10 mt10">
    <div class="col-md-12">
        <a href="@Url.Action("NewOrEdit")" class="btn btn-lightblue btn-sm pull-right">Thêm mới</a>
        <h3 class="panel-title">
            @ViewBag.Title
        </h3>
    </div>
</div>
@using (Html.BeginForm(null, null, FormMethod.Get, new { role = "form", id = "frmSearch" }))
{
    @Html.Hidden("SortName", searchModel.SortName)
    @Html.Hidden("SortOrder", searchModel.SortOrder)
    <div class="row">
        <div class="col-md-3">
            <select name="Status" class="form-control" onchange="this.form.submit();">
                @foreach (var item in Helpers.GetTicketStatusList())
                {
                    <option value="@item.Key" @(item.Key == searchModel.Status ? "selected" : "")>@item.Value</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <div class="input-group">
                <input type="text" class="form-control" name="SearchText" placeholder="Tìm kiếm" value="@searchModel.SearchText">
                <span class="input-group-addon" id="btnSearch"><i class="fa fa-search"></i></span>
            </div>
        </div>
    </div>
}
<div class="table-responsive mt10">
    <table class="table table-dark" cellspacing="0">
        <tr>
            <th>STT</th>
            <th>
                <a href="javascript:void(0)" class="sortField" data-sortName="KhachHang">Khách hàng</a>
            </th>
            <th>
                <a href="javascript:void(0)" class="sortField" data-sortName="TenSanPham">Tên sản phẩm</a>
            </th>
            <th>
                <a href="javascript:void(0)" class="sortField" data-sortName="LoaiVai">Loại vải</a>
            </th>
            <th>
                <a href="javascript:void(0)" class="sortField" data-sortName="DonGia">Đơn giá</a>
            </th>
            <th>
                <a href="javascript:void(0)" class="sortField" data-sortName="DatCoc">Đặt cọc</a>
            </th>
            <th>
                <a href="javascript:void(0)" class="sortField" data-sortName="SoLuong">Số lượng</a>
            </th>
            <th>
                <a href="javascript:void(0)" class="sortField" data-sortName="NgayThu">Ngày thử</a>
            </th>
            <th>
                <a href="javascript:void(0)" class="sortField" data-sortName="NgayLay">Ngày lấy</a>
            </th>
            <th>
                <a href="javascript:void(0)" class="sortField" data-sortName="Status">Trạng thái</a>
            </th>
            <th></th>
        </tr>

        @{
            var stt = 1;
            foreach (var item in Model)
            {
                <tr class="stat even">
                    <td class="ac">
                        @(stt++)
                    </td>
                    <td>
                        @item.Customer.TenKH (@item.Customer.SDT)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSanPham)
                    </td>
                    <td>@item.LoaiVai.Name (@item.LoaiVai.MaVai)</td>
                    <td>
                        @item.DonGia.ToString("N0") ₫
                    </td>
                    <td>
                        @item.DatCoc.ToString("N0") ₫
                    </td>
                    <td>
                        @item.SoLuong
                    </td>
                    <td>
                        @item.NgayThu.ToString("dd/MM/yyyy HH:mm:ss")
                    </td>
                    <td>
                        @item.NgayLay.ToString("dd/MM/yyyy HH:mm:ss")
                    </td>
                    <td>
                        @Html.Raw(Helpers.DrawStatusTicket(item.Status))
                    </td>
                    <td>
                        <a href="@Url.Action("PrintPhieuHen", new { id=1})" target="_blank" class="btn btn-xs btn-primary">In Phiếu</a>
                        <a href="@Url.Action("NewOrEdit", new { id = item.Id })" class="btn btn-xs btn-primary">Sửa</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-xs btn-danger btnConfirm">Xóa</a>
                    </td>
                </tr>
            }
        }
    </table>
</div>
<div class="row">
    <div class="col-md-12">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
        new
        {
            page,
            searchModel.Status,
            searchModel.SearchText,
            searchModel.SortOrder,
            searchModel.PageSize
        }))
    </div>
</div>